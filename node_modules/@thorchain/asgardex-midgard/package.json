    "build": "rollup -c",
    "lint": "eslint '{src,__tests__}/**/*.ts' --fix",
    "test": "jest --coverage",
    "prepublishOnly": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:thorchain/asgardex-common/asgardex-midgard.git"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist",
      "<rootDir>/node_modules/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [],
  "author": "Thorchain",
  "license": "MIT",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/axios-mock-adapter": "^1.10.0",
    "@types/faker": "^5.1.2",
